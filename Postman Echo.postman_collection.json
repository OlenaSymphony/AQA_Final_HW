		{
			"name": "GET user information",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Assert retrieved firstname and lastname\", function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData.args.firstname).to.eql(pm.environment.get('first_name'));",
							"    pm.expect(jsonData.args.lastname).to.eql(pm.environment.get('last_name'));",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "https://postman-echo.com/get?firstname={{first_name}}&lastname={{last_name}}",
					"protocol": "https",
					"host": [
						"postman-echo",
						"com"
					],
					"path": [
						"get"
					],
					"query": [
						{
							"key": "firstname",
							"value": "{{first_name}}"
						},
